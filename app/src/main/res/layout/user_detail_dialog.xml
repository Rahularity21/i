<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="#000000"
    android:layout_margin=".1dp"
    android:layout_height="wrap_content">

    <ImageButton
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="5dp"
        android:padding="15dp"
        android:background="@drawable/close"/>

    <ScrollView
        android:layout_below="@+id/close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:id="@+id/profilePicLayout"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="vertical">

                    <android.support.v7.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_gravity="center_horizontal"
                        xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        card_view:cardCornerRadius="75dp"
                        card_view:cardElevation="4dp">

                        <ImageView
                            android:id="@+id/profile_pic"
                            android:clickable="true"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/profile" />

                    </android.support.v7.widget.CardView>
                </LinearLayout>

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Author is:"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Hero Hamada"
                    android:textStyle="bold|italic"
                    android:textSize="21sp"
                    android:textColor="@color/grayShade1"
                    android:textAlignment="center"/>

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Author's Email:"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="abc@xyz.com"
                    android:textStyle="bold|italic"
                    android:textSize="18sp"
                    android:textColor="@color/grayShade1"
                    android:textAlignment="center"/>

                <LinearLayout
                    android:id="@+id/about_section"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:visibility="invisible">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="About:"
                        android:textAlignment="center"
                        android:textColor="@color/white"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/about"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="I am a Student of Msit Persuing B-tech currently in the second year of my course"
                        android:textStyle="italic"
                        android:textSize="16sp"
                        android:textColor="@color/grayShade1"
                        android:textAlignment="center"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/website_section"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:visibility="invisible">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Website:"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:textAlignment="center"/>

                    <TextView
                        android:layout_marginBottom="25dp"
                        android:id="@+id/website"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:text="www.tonic.com"
                        android:textStyle="bold|italic"
                        android:textSize="18sp"
                        android:textColor="@color/grayShade1"
                        android:textAlignment="center"/>

                </LinearLayout>



            </LinearLayout>




        </LinearLayout>

    </ScrollView>



</RelativeLayout>