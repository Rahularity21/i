<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    tools:context="com.ithought.rahul.ithought.MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/image_three"
        android:id="@+id/blog_image"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/title_textview"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="20dp"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:layout_alignBottom="@+id/blog_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:shadowColor="#55000000"
        android:shadowDx="6"
        android:shadowDy="6"
        android:shadowRadius="6"
        android:text="This is the title of the post...this view will not show the content of the post"/>

    <ImageButton
        android:id="@+id/heart_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/heart_filled"
        android:padding="20dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="2dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"/>

    <ImageButton
        android:layout_toLeftOf="@+id/heart_button"
        android:id="@+id/anonymous_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/anonymous1"
        android:padding="17dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="2dp"
        android:layout_alignParentTop="true"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/love_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00"
        android:textAlignment="center"
        android:textColor="#de1738"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/heart_button"
        android:layout_alignEnd="@+id/heart_button" />
</RelativeLayout>